<%= simple_form_for(@history,remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
     <%= f.input :historia, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'mini', :cols => 100} } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Incluir" %>
  </div>
<% end %>
