
<% if !artist_signed_in? %>  
  <%= link_to 'Novo Artista', new_artist_registration_path, :class => 'btn-sm btn btn-default' %>
<% end %>

  <div class="artistas">
    <% if !@artist_data.nil? || !@artist_data.empty? %>
      <% @artist_data.each do |artist_data| %>
        <div class="item-artista img-thumbnail">
           <%= link_to(image_tag(artist_data.logo.url(:thumb)), "/show_artista/#{artist_data.id}" ,remote: true)  %>
           <br/>
           <span class="text-center"> <%= artist_data.nome %> </span>
         </div>
         <% if @profile == "adm" %>
          <%= link_to "edit","/edit_disco/#{album.id}/adm", :class => "btn", :remote => true %>

              <%= link_to 'Destroy', "/remove_disco/#{album.id}/adm", method: :delete, :remote => true ,data: { confirm: 'Are you sure?' } , class: 'btn btn-danger'%>
        <% end %>
      <% end %>
    <% end %>  
  </div>

  <div class="painel-artistas">
      
  </div>
